<div id="nameModal" class="modal hide fade" style="display: none;">
	<%= form_for @character do |f| %>
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">Ã—</button>
			<h3>Change Character Details</h3>
		</div>
		<div class="modal-body">

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :race %>
			<%= f.select(:race, %w[Wolf Dwarf Goblin Vampire], selected: @character.race) %>

			<%= f.label :campaign_id, "Campaign" %>
			<%= f.select :campaign_id, current_user.campaign_select, selected: @character.campaign_id %>

			<%= f.label :privacy %>
			<%= f.select(:privacy, [['Public', :public], ['Campaign', :campaign], ['Private', :private]], selected: @character.privacy) %>

		</div>
		<div class="modal-footer">
			<a href='#' class="btn" data-dismiss="modal">Cancel</a>
			<%= f.submit "Change Details", class: "btn btn-small btn-primary" %>
		</div>
	<% end %>
</div>

<div id="statsModal" class="modal hide fade" style="display: none;">
	<%= form_for(@character, url: { action: "update" }) do |f| %>
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">Ã—</button>
			<h3>Change Character Details</h3>
		</div>
		<div class="modal-body">

			Stats Type:
			<%= select_tag :base_stats, options_for_select(@character.stats_options, @character.stats_selected), id: "statsBase" %>
			<%#= select(:stats, :base_stats, options_for_select(@character.stats_options), id: "statsBase") %>

			Base Stats:
			<% @character.stats_options.each_with_index do |stat, index| %>
				<%= select_tag :"raw_stats#{index}", options_for_select(@character.stats_options(index), @character.stats_selected(index)), id: "statsRaw#{index}" %>
			<% end %>
		</div>
		<div class="modal-footer">
			<a href='#' class="btn" data-dismiss="modal">Cancel</a>
			<%= f.submit "Save Changes", class: "btn btn-small btn-primary" %>
		</div>
	<% end %>
</div>

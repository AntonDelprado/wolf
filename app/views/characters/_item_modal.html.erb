<div id="itemModal" class="modal hide fade" style="display: none;">
	<%= form_for(@character, url: { action: :items }) do |f| %>
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">Ã—</button>
			<h3>Change Items</h3>
		</div>
		<div class="modal-body">

			Weapon:
			<%= select_tag(:primary, options_for_select(@character.can_equip(:primary), @character.primary_equiped? ? @character.primary.name : nil)) %>

			Off Hand:
			<%= select_tag(:off_hand, options_for_select(@character.can_equip(:off_hand), @character.off_hand_equiped? ? @character.off_hand.name : nil)) %>

			Armour:
			<%= select_tag(:armour, options_for_select(@character.can_equip(:armour), @character.armour_equiped? ? @character.armour.name : nil)) %>

		</div>
		<div class="modal-footer">
			<a href='#' class="btn" data-dismiss="modal">Cancel</a>
			<%= f.submit "Change Equip", class: "btn btn-small btn-primary" %>
		</div>
	<% end %>
</div>

<div id="modifyItems" class="modal hide fade" style="display: none;">
	<%= form_for(@character, url: { action: "update", add_skills: true }) do |f| %>
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">Ã—</button>
			<h3>Add Items</h3>
		</div>
		<div class="modal-body">

			Weapon:
			<%= select_tag(:weapon, options_for_select(weapons.collect { |weapon| weapon[:name] }.unshift('None'))) %>

			Off Hand:
			<%= select_tag(:weapon, options_for_select(shields.collect { |shield| shield[:name] }.unshift('None'))) %>

			Armour:
			<%= select_tag(:armour, options_for_select(armours.collect { |armour| armour[:name] })) %>

		</div>
		<div class="modal-footer">
			<a href='#' class="btn" data-dismiss="modal">Cancel</a>
			<%= f.submit "Save Changes", class: "btn btn-small btn-primary" %>
		</div>
	<% end %>
</div>

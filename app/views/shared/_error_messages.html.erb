<% if @character.errors.any?  %>
	<div id="error_explanation">
		<div class="alert alert-error">
			The form contains <%= pluralize(@character.errors.count, "error") %>.
		</div>
		<ul>
			<% @character.errors.full_messages.each do |msg| %>
			<li>* <%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<% if @character.error_messages.any?  %>
	<div id="error_explanation">
		<div class="alert alert-error">
			The character contains <%= pluralize(@character.error_messages.count, "error") %>.
		</div>
		<ul>
			<% @character.error_messages.each do |msg| %>
			<li>* <%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>

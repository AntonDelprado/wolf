<div class="row">
	<% @campaign_list.select { |campaign| campaign.open? or campaign.has_member? current_user }.sort_by { |campaign| campaign.name }.each do |campaign| %>
		<div class="well span10 center">
			<h2><%= link_to campaign.name, campaign %></h2>
			<%= campaign.description %>
			<% if signed_in? %>
				<% membership = CampaignMember.find_by_user_id_and_campaign_id(current_user.id, campaign.id) %>
				<p class="center membership">
					<% if membership.nil? %>
						Not a Member
					<% elsif membership.membership == :admin %>
						Admin
					<% elsif membership.membership == :member %>
						Member
					<% elsif membership.membership == :deny %>
						Denied
					<% elsif membership.membership == :request %>
						Requesting to Join
					<% elsif membership.membership == :invite %>
						Invited to Join
					<% end %>
				</p>
			<% end %>
		</div>
	<% end %>
</div>

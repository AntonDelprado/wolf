<% provide(:title, "Sign In") %>

<h1>Sign In</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(:session, url: sessions_path) do |f| %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<div>
				<%= f.submit "Sign In", class: "btn btn-large btn-primary" %>
				<%= link_to "Create Account", signup_path, class: "btn btn-large btn-primary right" %>
			</div>
		<% end %>
	</div>
</div>
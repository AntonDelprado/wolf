<% provide(:title, "Modify Campaign") %>

<h1>Modify Campaign</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@campaign) do |f| %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :description %>
			<%= f.text_area :description, rows: 5 %>

			<%= f.label :visibility, "Visibility" %>
			<%= f.select(:visibility, [['Open', :open], ['Closed', :closed]], selected: @campaign.visibility) %>

			<%= f.submit "Save Changes", class: "btn btn-large btn-primary" %>

		<% end %>
	</div>
</div>

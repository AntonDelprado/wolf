<% provide(:title, "Create Campaign") %>

<h1>Create new campaign</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@campaign) do |f| %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :description %>
			<%= f.text_area :description, rows: 5 %>

			<%= f.submit "Create Campaign", class: "btn btn-large btn-primary" %>

		<% end %>
	</div>
</div>
